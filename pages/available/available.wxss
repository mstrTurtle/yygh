/* pages/available.wxss */
.page {
    background-color: #f5f5f5;
    min-height: 100%;
  }
  
  .reservation-container, .query-container {
    padding: 16px;
  }
  
  .section {
    background-color: #fff;
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 16px;
  }
  
  .section-title {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 16px;
    color: #333;
  }
  
  .radio-item {
    display: block;
    margin-bottom: 12px;
  }
  
  .companion-item {
    display: flex;
    align-items: center;
    margin-bottom: 12px;
  }
  
  .companion-item .van-button {
    margin-left: 12px;
  }
  
  .tips {
    color: #888;
    font-size: 12px;
    margin-top: 8px;
  }
  
  .submit-section {
    padding: 16px;
    background-color: #fff;
    border-radius: 8px;
    text-align: center;
  }
  
  .reservation-card {
    margin-bottom: 16px;
  }
  
  .status {
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
  }
  
  .status-pending {
    background-color: #fff7e6;
    color: #ff9a2e;
  }
  
  .status-approved {
    background-color: #e6f7ee;
    color: #00b42a;
  }
  
  .status-rejected {
    background-color: #ffe6e6;
    color: #f53f3f;
  }
  
  .status-completed {
    background-color: #e8f3ff;
    color: #1890ff;
  }
  
  .detail-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px;
    border-bottom: 1px solid #eee;
  }
  
  .detail-title {
    font-size: 18px;
    font-weight: bold;
  }
  
  .detail-content {
    padding: 16px;
    max-height: calc(80% - 58px);
    overflow-y: auto;
  }
  